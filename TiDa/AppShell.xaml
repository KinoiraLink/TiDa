        <!--<ContentView.TranslationY>
            <OnPlatform x:TypeArguments="system:Double">
                <On Platform="UWP" Value="-200" />
                <On Platform="Android" Value="-280"></On>
            </OnPlatform>
        </ContentView.TranslationY>-->
        <ContentView>
            
            <Grid BackgroundColor="#00A6A6"
